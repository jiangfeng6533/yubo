<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText" bindtap='toback'>返回</view>
  <view slot="content">维修订单修改</view>
</cu-custom>

<form>

  <view class="cu-form-group margin-top">
    <view class="title">客户级别</view>
    <picker bindchange="Changegrade"  range="{{clientgrade}}" >
      <view class="picker">
        {{clientgrade[grade]?clientgrade[grade]:'请选择客户级别'}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">客户名称</view>
    <input placeholder="请输入客户名称" bindtap='selectclient' bindinput="getclientname" disabled='{{grade>0?true:false}}' value="{{cname}}"></input>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">联系电话</view>
    <input placeholder="请输入联系电话" bindtap='selectclient' disabled='{{grade>0?true:false}}' value="{{cphone}}"></input>
  </view>

  <view class="cu-form-group margin-top">
    <view class="title">维修费用</view>
    <input placeholder="请输入报价费用"></input>
  </view>

  <view class="cu-form-group margin-top">
    <view class="title">预计取机时间</view>
    <input placeholder="请输入预计维修时间"></input>
    <text class=" text-blue">天</text>
  </view>

  <view class="cu-form-group margin-top">
    <view class="title">设备名称</view>
    <input placeholder="请输入设备名称"></input>
  </view>

  <view class="cu-form-group margin-top">
    <view class="title">规格型号</view>
    <input placeholder="请输入规格型号"></input>
  </view>

  <view class="cu-form-group top margin-top">
    <view class="title">维修内容</view>
    <textarea data-placeholder="请输入维修内容" maxlength="-1" disabled="disabled" placeholder-class="placeholder" class="{{textareaBValue?'value':''}}" bindtap="changeGoods"></textarea>
  </view>

  <view class="cu-bar bg-white margin-top">
    <view class="action">
      图片上传
    </view>
    <view class="action">
      {{imgList.length}}/4
    </view>
  </view>
  <view class="cu-form-group">
    <view class="grid col-4 grid-square flex-sub">
      <view class="padding-xs bg-img" style="background-image:url({{imgList[index]}})" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
        <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
          <text class="icon-close"></text>
        </view>
      </view>
      <view class="padding-xs solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
        <text class="icon-cameraadd"></text>
      </view>
    </view>
  </view>

   <view class="cu-form-group margin-top">
    <textarea data-placeholder="请输入备注" maxlength="-1" disabled="{{modalName!=null}}" placeholder-class="placeholder" class="{{textareaAValue?'value':''}}" bindinput="textareaAInput"></textarea>
  </view>
  <button class="cu-btn block bg-blue margin-tb-sm lg" bindtap='toadd'>
    <text class="icon-loading2 iconfont-spin"></text> 提交</button>
</form>