<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText" bindtap='toback'>返回</view>
  <view slot="content">密码修改</view>
</cu-custom>


<form class="bg-white " bindsubmit="submit">
